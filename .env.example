# Environment Variables for Docker Deployment
# Copy this file to .env and update with your credentials

# Jira API Configuration
# Your Jira Cloud instance URL (e.g., https://your-company.atlassian.net)
JIRA_URL=https://your-domain.atlassian.net

# Authentication: Email + API Token
# Create API token at: https://id.atlassian.com/manage-profile/security/api-tokens
JIRA_EMAIL=your.email@example.com
JIRA_API_TOKEN=your_api_token_here

# Default project key (optional but convenient)
# Example: PROJ, DEMO, TEST
JIRA_DEFAULT_PROJECT=

# MCP Server Settings (for HTTP/SSE mode)
MCP_TRANSPORT=sse
MCP_HOST=0.0.0.0
MCP_PORT=9001

# Logging level (optional)
# Options: DEBUG, INFO, WARNING, ERROR
FASTMCP_LOG_LEVEL=INFO

